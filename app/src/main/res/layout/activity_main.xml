<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itb"
        tools:context="itbstudentapp.com.itbstudentapp.MainActivity"
        >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        >

            <Button
                android:id="@+id/transport"

                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"

                android:background="#80ff0000"
                android:text="@string/title_activity_transport"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/timetable"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#80ffF000"
                android:text="@string/title_activity_timetable"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/quiz"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#8000ffff"
                android:text="@string/title_activity_quiz"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#80c300ff"
                android:text="@string/title_activity_map"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/forum"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#8000ff2f"
                android:text="@string/title_activity_forum"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/chat"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#80ffa200"
                android:text="@string/title_activity_chat"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/links"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#80f700ff"
                android:text="@string/title_activity_links"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="132sp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#80003cff"
                android:text="@string/title_activity_phone"

                android:textColor="@android:color/white"
                android:textSize="20sp" />

    </GridLayout>

</ScrollView>
