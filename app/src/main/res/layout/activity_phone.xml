                />

            <Button
                android:layout_width="194sp"
                android:layout_height="100sp"
                android:width="30sp"
                android:text=" S.I.D."
                android:id="@+id/buttonSid"
                />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:width="30dp"
                android:text="student services"
                android:id="@+id/buttonService"
                />

            <Button
                android:layout_width="194dp"
                android:layout_height="100dp"
                android:width="30dp"
                android:text="Exam Office"
                android:id="@+id/buttonExam"
                />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:width="30dp"
                android:text="Go Back"
                android:id="@+id/home"
                />

