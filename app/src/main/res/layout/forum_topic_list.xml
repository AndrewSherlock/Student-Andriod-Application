<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bannerGreen"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Section name"
                android:textColor="#fff"
                android:textSize="35sp"
                android:gravity="center"
                android:id="@+id/forum_title"
                android:fontFamily="@font/cuprum"
                />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2">

            <LinearLayout
                android:id="@+id/forum_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/relativeLayout">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/forum_strokes"
                android:id="@+id/bottom_stroke_forum"
                />

            <LinearLayout
                android:layout_below="@id/bottom_stroke_forum"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/bannerGreen"
                android:orientation="horizontal"
                >

                <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Post"
                    android:background="@drawable/forum_buttons"
                    android:layout_margin="5dp"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/cuprum"
                    android:id="@+id/forum_new_message_button"
                    android:clickable="true"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Back to menu"
                        android:background="@drawable/forum_buttons"
                        android:layout_margin="5dp"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/cuprum"
                        android:id="@+id/forum_go_back"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>